<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base red background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" />
        </shape>
    </item>
    
    <!-- Darker red pattern overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#B71C1C"
                android:endColor="#D32F2F"
                android:type="linear"
                android:alpha="0.3" />
        </shape>
    </item>
    
    <!-- Gold accent overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/tet_gold_primary"
                android:endColor="@color/tet_gold_dark"
                android:type="linear"
                android:alpha="0.1" />
        </shape>
    </item>
    
</layer-list>
