<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Achievement Icon -->
        <TextView
            android:id="@+id/iconTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/art_emoji"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/achievement_icon_background"
            android:layout_marginEnd="16dp" />

        <!-- Achievement Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/achievement_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_on_light"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/achievement_description"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_on_light"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:progress="0"
                android:max="100"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progressTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/locked"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_on_light" />

                <TextView
                    android:id="@+id/pointsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_zero"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/statusImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_lock"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
