<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievements"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_on_light"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp" />

    <!-- Statistics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/totalAchievementsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_achievements"
            android:textSize="16sp"
            android:textColor="@color/text_primary_on_light"
            android:gravity="center"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/unlockedAchievementsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/unlocked_achievements"
            android:textSize="16sp"
            android:textColor="@color/success_color_on_white"
            android:gravity="center"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- All Achievements -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_achievements_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_on_light"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Achievements RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/achievementsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />


</LinearLayout>
