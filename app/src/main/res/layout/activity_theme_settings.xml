<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="4dp"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-medium" />

                    <!-- Theme Selection Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/choose_theme"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_smart"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="sans-serif-medium" />

                            <!-- System Theme - Separate LinearLayout -->
                            <LinearLayout
                                android:id="@+id/systemThemeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_marginBottom="8dp">

                                <RadioButton
                                    android:id="@+id/systemThemeRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:buttonTint="@color/primary_color" />

                                <!-- System Icon -->
                                <LinearLayout
                                    android:id="@+id/systemIconLayout"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_background_system"
                                    android:gravity="center"
                                    android:layout_marginEnd="16dp"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/settings_emoji"
                                        android:textSize="24sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/system_theme"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary_smart"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/system_theme_description"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary_smart"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Light Theme - Separate LinearLayout -->
                            <LinearLayout
                                android:id="@+id/lightThemeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_marginBottom="8dp">

                                <RadioButton
                                    android:id="@+id/lightThemeRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:buttonTint="@color/primary_color" />

                                <!-- Light Icon -->
                                <LinearLayout
                                    android:id="@+id/lightIconLayout"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_background_light"
                                    android:gravity="center"
                                    android:layout_marginEnd="16dp"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sun_emoji"
                                        android:textSize="24sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/light_theme"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary_smart"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/light_theme_description"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary_smart"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Dark Theme - Separate LinearLayout -->
                            <LinearLayout
                                android:id="@+id/darkThemeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <RadioButton
                                    android:id="@+id/darkThemeRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:buttonTint="@color/primary_color" />

                                <!-- Dark Icon -->
                                <LinearLayout
                                    android:id="@+id/darkIconLayout"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_background_dark"
                                    android:gravity="center"
                                    android:layout_marginEnd="16dp"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/moon_emoji"
                                        android:textSize="24sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/dark_theme"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary_smart"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/dark_theme_description"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary_smart"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Táº¿t Theme - Separate LinearLayout -->
                            <LinearLayout
                                android:id="@+id/tetThemeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:visibility="gone">

                                <RadioButton
                                    android:id="@+id/tetThemeRadio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    android:buttonTint="@color/tet_red_primary" />

                                <!-- Táº¿t Icon -->
                                <LinearLayout
                                    android:id="@+id/tetIconLayout"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/icon_background_tet"
                                    android:gravity="center"
                                    android:layout_marginEnd="16dp"
                                    android:clickable="true"
                                    android:focusable="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ðŸ®"
                                        android:textSize="24sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tet_theme"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary_smart"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tet_theme_description"
                                        android:textSize="14sp"
                                        android:textColor="@color/text_secondary_smart"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

            <!-- Theme Preview Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_color"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_preview"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_smart"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/themePreviewText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_preview_default"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_smart"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Theme Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_color"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_info_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_smart"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_info_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_smart"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
