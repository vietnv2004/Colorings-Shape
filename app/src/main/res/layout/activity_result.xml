<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center">

    <!-- Congratulations Icon -->
    <ImageView
        android:id="@+id/congratulationsIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_congratulations"
        android:layout_marginBottom="24dp"
        android:contentDescription="Congratulations" />

    <!-- Congratulations Text -->
    <TextView
        android:id="@+id/congratulationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/great_job"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="32dp" />

    <!-- Results Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <!-- Score -->
            <TextView
                android:id="@+id/scoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐIỂM SỐ"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary_on_light"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_label"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginBottom="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginBottom="24dp" />

            <!-- Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THỜI GIAN"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary_on_light"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_label"
                android:textSize="24sp"
                android:textColor="@color/text_primary_on_light"
                android:layout_marginBottom="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginBottom="24dp" />

            <!-- Rank -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XẾP HẠNG"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary_on_light"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rankTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank_label"
                android:textSize="32sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/home"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Button.Primary" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/history"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Button.Secondary" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
